body,nav
  background #0095FF
  color  var(--w)
@media (max-width: 1500px)
  header
    #back a,#menu+label
      color var(--b)
      background var(--w)
main
  position relative
  &:before,&:after
    content ""
    position absolute
    top -5rem
    left 0
    width 100%
    height 30rem
    display block
    width: 100vw;
    margin: 0 calc(50% - 50vw);
    z-index -99
  &:before
    background url(/banana-muffin/header.jpg) center center / cover no-repeat fixed
  &:after
    background linear-gradient(to top, #0095FF, rgba(151, 195, 198, 0.3)),url(/dot.png) repeat
  a
    font-weight bold
    color var(--b)
    background var(--y)
    &:hover
      background var(--w)
      color var(--b)
#nav li+li
  border-top solid .3rem var(--w)
ugo server
.sns a
  font-size 1.5rem
  color var(--b)
  background var(--w)