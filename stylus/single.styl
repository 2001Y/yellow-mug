h1
  font-size 4rem
  margin-top 1rem
  margin-bottom 3rem
#SubTitle
  font-size 2rem
  font-weight bold
  text-transform: capitalize;
.gallery
  column-count: 6;
  column-fill: auto;
  @media (max-width: 600px)
    column-count: 4;
    column-fill: auto;
  img
    width 100%
    height auto
    padding .5rem 0
    transition opacity .3s
    will-change opacity
    cursor: zoom-in;
    &:hover
      opacity .7

#lightbox
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: url(/load.svg) no-repeat center,rgba(0, 0, 0, .5)
  backdrop-filter: blur(13px);
  z-index: 99;
  transition .3s;
  cursor pointer
  img,source
    max-width: 100vw;
    max-height 100vh
    position: fixed;
    top: 0;
    left: 0;
    right 0
    bottom 0
    margin auto
    transition .3s;
    @media (max-width: 870px) 
      min-width 100vw
#lightbox-figcaption
  z-index: 999;
  text-align center
  width 80vw
  position: fixed;
  right 10vw
  bottom 3rem
#Top,#Bottom
  position absolute
.close
  opacity: 0;
  visibility: hidden;
  source,img
    transform scale(.5)
.open
  opacity: 1;
  visibility: visible;    