  font-weight bold
hr
  width 30%
  height .5rem
  border-radius 1rem
  background var(--b)
  margin 5rem auto
pre
  font-family monospace, monospace
  font-size inherit
address
  font-style inherit
a
  background-color transparent
  text-decoration none
  color inherit
abbr[title]
  text-decoration underline
  text-decoration underline dotted
b,strong
  font-weight bolder
code,kbd,samp
  font-family monospace, monospace
  font-size inherit
small
  font-size 80%
