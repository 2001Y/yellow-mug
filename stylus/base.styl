  height auto
[type="search"]
  outline-offset -2px
[type="search"]-webkit-search-decoration
  -webkit-appearance none
-webkit-file-upload-button
  -webkit-appearance button
  font inherit
iframe
  display block
label[for]
  cursor pointer
details
  display block
summary
  display list-item
[contenteditable]
  outline none
