  display none


:root
  @media (max-width: 800px)
    font-size 12px
body
  font-family Helvetica,"游ゴシック Medium","Yu Gothic",YuGothic,-apple-system,Verdana,Meiryo
  --y #FCDA01
  --b #000
  --w #fff
a:hover
  color var(--y)
#nav
  text-align right
  a
    padding .6rem
    display block
    &:hover
      color var(--b)
  ul
    text-align left
    display flex
    justify-content flex-end
  li:hover
    background var(--y)
    color var(--b)
  li+li
    margin-left .3rem

h1,h2,h3,h4,h5,h6
  font-weight bold
  font-feature-settings "palt"
  word-wrap: break-word;
  small
    font-size .4em
h1
  font-size 4rem
  margin-top 1rem
  margin-bottom 3rem
h2
  font-size 3rem
  margin-top 3rem
  margin-bottom 2rem
h3
  font-size 2rem
  margin-top 2rem
  margin-bottom 1rem
h4
  font-size 1.5rem
  margin-top 2rem
  margin-bottom 1rem
time
  font-weight bold
header
  font-size 1.5rem
  font-weight bold
  padding 1.5rem
  display flex
  justify-content space-between
  align-items: center;
  position fixed
  top 0
  width 100vw
  height 5rem
  z-index 9!important
  backdrop-filter: blur(50px);
  #logo
    &>*
      height 1em
  &>*:first-child,&>*:last-child
    flex 2
  &>*:last-child
    width 20%
    text-align right 
  #back
    a
      background var(--b)
      color var(--w)
      padding .6rem
      height 1em
      box-sizing content-box
      display inline-block
      &:hover
        background var(--y)
        color var(--b)
  #logo
    flex 1
    text-align center
    display: flex;
    flex-direction: column;
    align-items: center;
    &:before
      content ""
      display: inline-block;/*忘れずに！*/
      width 2em
      height 1em
      background: url(/logo.png) no-repeat center
      background-size: contain;
      vertical-align sub
main
  max-width 900px
  padding 1.5rem
  margin 5rem auto 0 auto
  p
    letter-spacing .1em
    line-height 1.7em
    margin-bottom 1rem
    font-feature-settings "palt"
    big
      font-size 1.7em
      margin-top .2em
      display inline-block

#menu,#menu+label
  display none
#menu+label
  background var(--b)
  color var(--w)
  padding .6rem
  &:before
    content "MENU"
#menu+label:hover,#menu:checked+label
  background var(--y)
  color var(--b)
@media (max-width: 1500px)
  #menu+label
    display inline-block
    height 1em
    box-sizing content-box
    &:after
      content ""
      width calc(100vw - 20rem)
      height 100vh
      @supports (-webkit-touch-callout: none)
        height: -webkit-fill-available;
      position fixed
      top 5rem
      left -100vw
      background rgba(0,0,0,.5)
      transition .3s
      will-change left
  nav
    height calc(100vh - 5rem)
    @supports (-webkit-touch-callout: none)
      height: calc(-webkit-fill-available - 5rem)
    width: 20rem
    background var(--w)
    @supports (backdrop-filter: blur(50px))
      background rgba(250,250,250,.5)
      backdrop-filter blur(50px)
    position fixed
    right -80vw
    top 5rem
    transition .3s
    display flex
    flex-direction column
    justify-content space-between
    .sns
      margin 0 auto
      padding 2rem
  #menu
    &:checked
      &~nav
        left auto
        right 0
      &+label
        &:before
          content "CLOSE"
        &:after
          left 0
          backdrop-filter blur(5px)
  #nav
    ul
      flex-direction: column;
    a
      padding 1rem
      height 1em
      box-sizing content-box
    li+li
      margin 0
      border-top solid .3rem var(--b)

.youtube
  margin auto
  width 80%
  padding-bottom 56.25*0.8%
  @media (max-width: 900px)
    width 100%
    padding-bottom 56.25%
  height 0px
  position relative
  margin-bottom 3rem
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
.sns
  li
    display inline-block
  a
    background var(--b)
    color var(--w)
    padding .6rem
    height 1em
    box-sizing content-box
    display inline-block
    &:hover
      background var(--y)
      color var(--b)
footer
  padding 3rem
  text-align center
  a
    font-size .7em
    opacity .8
  span
    opacity .5

.flex
  display flex
  >*
    width 50%
  >*+*
    margin-left 2%

#gallery,.comment
  column-count: 4;
  column-fill: auto;
  column-gap 1rem
  @media (max-width: 800px)
    column-count: 4;
    column-fill: auto;
  >*
    margin-bottom 1rem
    display block
  img
    width 100%
    height auto
    transition opacity .3s
    will-change opacity
    cursor: zoom-in;
    &:hover
      opacity .7

#lightbox
  width: 100vw;
  height: 100vh;
  @supports (-webkit-touch-callout: none)
    height: -webkit-fill-available;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: url(/load.svg) no-repeat center,rgba(0, 0, 0, .5)
  backdrop-filter: blur(13px);
  z-index: 99;
  transition .3s;
  cursor pointer
  img,source
    max-width: 100vw;
    max-height 100vh
    @supports (-webkit-touch-callout: none)
      max-height: -webkit-fill-available;
    position: fixed;
    top: 0;
    left: 0;
    right 0
    bottom 0
    margin auto
    transition .3s;
    @media (max-width: 870px) 
      min-width 100vw
#lightbox-figcaption
  z-index: 999;
  text-align center
  width 80vw
  position: fixed;
  right 10vw
  bottom 3rem
#Top,#Bottom
  position absolute
.close
  opacity: 0;
  visibility: hidden;
  source,img
    transform scale(.5)
.open
  opacity: 1;
  visibility: visible;    

.map
  width: 100vw;
  max-width 100vw;
  margin: 0 calc(50% - 50vw);