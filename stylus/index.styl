body
  background var(--bg) no-repeat fixed center 90%/cover
  display: flex;
  align-items: center;
  flex-direction: column;
  &:before
    content ""
    position fixed
    top 0
    left 0
    height 100%
    width 100%
    background linear-gradient(45deg,rgba(250,250,250,.9),rgba(250,250,250,0),rgba(250,250,250,0)), url("/dot.png")
    @media (max-width: 1300px)
      background linear-gradient(170deg,rgba(250,250,250,.9),rgba(250,250,250,0),rgba(250,250,250,0)), url("/dot.png")
  &>*
    z-index 2
main
  flex: 1;
  position fixed
  bottom 2vmin
  left 2vmin
  @media (max-width: 1300px)
    top 2vmin
    left 2vmin
  p
    margin 0
footer
  position fixed
  bottom 2vmin
  right 2vmin
  padding 1.5rem
h1
  font inherit
  margin 0
h2
  font-size 7rem
  @media (max-width: 800px)
    font-size 14vw
  margin-top 0
  position: relative;
  span
    position absolute
    will-change transform,text-shadow
    animation: exclamation 1.5s 10s forwards
    transform-origin left bottom
@keyframes exclamation
  0%
    transform:scale(1) rotate(0) translate(0,0)
  50%
    text-shadow none
  100%
    transform:scale(1.6) rotate(20deg) translate(-.1em,-0em)
    color var(--y)
    text-shadow:1px 0 5px black;
#sabTitle
  font-weight bold
  font-size 2rem
  @media (max-width: 800px)
    font-size 5vw

#loadSVG
    margin: auto;
    width: 100%;
    padding-bottom: 45%;
    height: 0;
    position: relative;

#loadSVG div
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height:100%

#load
  font-weight bold
  width 100vw
  height 100vh
  font-size min(23vw,30vh)
  background var(--b)
  position fixed
  top 0
  left 0
  z-index 999
  display flex
  flex-direction: column;
  justify-content: flex-end;
  animation: load .5s 7s forwards,opacity .5s 9s forwards
  pointer-events: none;
@keyframes load
  0%
    background var(--b)
  100%
    background var(--w)
svg
  stroke: #fff;
  stroke-width: 0.5px;
  fill: #fff;
  stroke-dasharray: 600;
  stroke-dashoffset: 600;
  position absolute
  bottom 0
  left 0
  will-change animation
  width 100%
.cls-1
  fill:none
  stroke none

#loadIMG
  opacity 0
  width 20%
  animation: opacityV .5s 7s forwards
  position absolute
  left 40%
  bottom 45%
#logo0
  animation: textAnime 5s forwards,opacity .5s 6s forwards
#logoM
  animation: textAnime 5s forwards,size 1s 7s forwards,logoM 1s 7s forwards,color 1s 7s forwards
#logoY
  animation: textAnime 5s forwards,size 1s 7s forwards,logoY 1s 7s forwards,color 1s 7s forwards
#allow,#ug
  opacity 0
  width 40%
  fill var(--b)
  animation: opacityV .5s 6.5s forwards
#allow
  bottom 20%
  left 22%
#ug
  bottom -10%
  left 55%

.none
  #load
    display none!important
  h2
    span
      animation: exclamation 1.5s forwards

@keyframes logoM
  0%
    bottom 0
    left 0
  100%
    bottom -10%
    left 55%
@keyframes logoY
  0%
    bottom 0
    left 0
  100%
    bottom 20%
    left 22%
@keyframes textAnime
  0%
    stroke-dashoffset: 600;
    fill:transparent;
  50%
    fill:transparent;
  80%
    stroke-dashoffset: 0;
    fill:var(--b);
@keyframes opacity
  0%
    opacity 1
  100%
    opacity 0
@keyframes opacityV
  0%
    opacity 0
  100%
    opacity 1
@keyframes size
  0%
    width 100%
  100%
    width 40%
@keyframes color
  0%
    fill #fff
  100%
    fill var(--b)