body
  background linear-gradient(rgba(250,250,250,.3),rgba(250,250,250,.3)), url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAECAYAAACp8Z5+AAAAFUlEQVR4AWM4e/asDwwzAAFBAUwAAEBXGEy6iRBYAAAAAElFTkSuQmCC"), url("/bg2.jpg") no-repeat fixed bottom/cover
h1
  font inherit
  margin 0
h2
  font-size 7rem

#loadSVG
    margin: auto;
    width: 100%;
    padding-bottom: 45%;
    height: 0;
    position: relative;

#loadSVG div
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height:100%

#load
  font-weight bold
  width 100vw
  height 100vh
  font-size min(23vw,30vh)
  background var(--b)
  position fixed
  top 0
  left 0
  z-index 999
  display flex
  flex-direction: column;
  justify-content: flex-end;
  animation: load .5s 7s forwards,opacity .5s 9s forwards
  pointer-events: none;
@keyframes load
  0%
    background var(--b)
  100%
    background var(--w)
svg
  stroke: #fff;
  stroke-width: 0.5px;
  fill: #fff;
  stroke-dasharray: 600;
  stroke-dashoffset: 600;
  position absolute
  bottom 0
  left 0
  will-change animation
  width 100%
.cls-1
  fill:none
  stroke none

#loadIMG
  opacity 0
  width 20%
  animation: opacityV .5s 7s forwards
  position absolute
  left 40%
  bottom 45%
#logo0
  animation: textAnime 5s forwards,opacity .5s 6s forwards
#logoM
  animation: textAnime 5s forwards,size 1s 7s forwards,logoM 1s 7s forwards,color 1s 7s forwards
#logoY
  animation: textAnime 5s forwards,size 1s 7s forwards,logoY 1s 7s forwards,color 1s 7s forwards
#allow,#ug
  opacity 0
  width 40%
  fill var(--b)
  animation: opacityV .5s 6.5s forwards
#allow
  bottom 20%
  left 22%
#ug
  bottom -10%
  left 55%
@keyframes logoM
  0%
    bottom 0
    left 0
  100%
    bottom -10%
    left 55%
@keyframes logoY
  0%
    bottom 0
    left 0
  100%
    bottom 20%
    left 22%
@keyframes textAnime
  0%
    stroke-dashoffset: 600;
    fill:transparent;
  50%
    fill:transparent;
  80%
    stroke-dashoffset: 0;
    fill:var(--b);
@keyframes opacity
  0%
    opacity 1
  100%
    opacity 0
@keyframes opacityV
  0%
    opacity 0
  100%
    opacity 1
@keyframes size
  0%
    width 100%
  100%
    width 40%
@keyframes color
  0%
    fill #fff
  100%
    fill var(--b)