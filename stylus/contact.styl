body,nav
  background var(--y)
  color  var(--b)
header
  #back a,#nav label
    &:hover
      background var(--w)
      color var(--b)
#menu:checked+label
  background var(--w)
  color var(--b)
#nav
  li:hover
    background var(--w)
    color var(--b)
  li+li
    border-top solid .3rem var(--b)
main
  max-width 700px

input,textarea,button
  border-radius 2rem
input,textarea
  padding 1rem
  width 100%
  border solid .3rem var(--b)
  &::placeholder
    color var(--b)
button
  font-weight bold
  font-size 1rem
  padding 1rem 5rem
  margin 2rem 0 0 auto
  background var(--b)
  color var(--w)
  &:hover
    background var(--w)
    color var(--b)
textarea
  height 10rem
  resize vertical
h2
  margin-bottom 1.5rem